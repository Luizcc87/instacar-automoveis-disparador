# ----------------------------------------------------------------------------
# Supabase Configuration
# ----------------------------------------------------------------------------
SUPABASE_URL=https://seu-projeto-id.supabase.co
SUPABASE_SERVICE_KEY=sua-service-role-key-aqui
SUPABASE_ANON_KEY=sua-anon-key-aqui

# ----------------------------------------------------------------------------
# Uazapi Configuration (WhatsApp API)
# ----------------------------------------------------------------------------
UAZAPI_BASE_URL=https://sua-instancia.uazapi.com
# Token da INSTANCIA (nao Admin Token!)
# Endpoints regulares (/chat/check, /send/text) usam header 'token' com Instance Token
# Endpoints administrativos usam header 'admintoken' (nao usado neste projeto)
UAZAPI_TOKEN=seu-instance-token-aqui

# ----------------------------------------------------------------------------
# OpenAI Configuration
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-sua-openai-api-key-aqui
OPENAI_MODEL=gpt-4

# ----------------------------------------------------------------------------
# Google Sheets Configuration
# ----------------------------------------------------------------------------
SHEET_IDS=["ID-PLANILHA-1","ID-PLANILHA-2","ID-PLANILHA-3","ID-PLANILHA-4","ID-PLANILHA-5","ID-PLANILHA-6","ID-PLANILHA-7","ID-PLANILHA-8","ID-PLANILHA-9"]
SHEET_PAGE_NAME=Listagem de Clientes por Vended

